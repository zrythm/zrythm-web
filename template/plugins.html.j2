{% extends "common/base.j2" %}
{% block head_content %}
<title>Zrythm - {{ _('Plugins') }}</title>
<meta name="description"
      content=
      "{% trans %}
       Plugins bundled with Zrythm
      {% endtrans %}" />
<link rel="canonical" href="https://www.zrythm.org/{{ lang }}/plugins.html">
{% endblock head_content %}

{% block body_content %}
<left>
<div class="container features_box">
  <h1 class="page_title">
    {% trans %}
    Plugins
    {% endtrans %}
  </h1>

  <div class="row">
    <div class="col-sm col-md-first">
      <h2 class="centered">
        {% trans %}
        ZLFO
        {% endtrans %}
      </h2>
      <img class="centered"
           src="https://git.zrythm.org/cgit/ZLFO/plain/screenshots/2020_feb_12_zlfo.png"
           alt="ZLFO screenshot">
      <div class="centered">
        {% trans %}
        ZLFO is a fully featured LFO for CV-based
        automation
        {% endtrans %}
      </div>
      <div>
        <b>{{ _('Features') }}</b>
        <ul>
          <li>{{ _('Multi-oscillator with custom wave') }}</li>
          <li>{{ _('Phase shift') }}</li>
          <li>{{ _('Vertical/horizontal inversion') }}</li>
          <li>{{ _('Step mode') }}</li>
          <li>{{ _('Editable range') }}</li>
          <li>{{ _('Sync to host or free-form') }}</li>
        </ul>
      </div>
      <div>
        {% trans %}
        Designed by Mire
        {% endtrans %}
      </div>
      <div class="centered">
        <a href="https://www.zrythm.org/plugins/ZLFO">{{ _('Technical specs') }}</a>
      </div>
    </div>
    <div class="col-sm col-md-normal">
      <h2 class="centered">
        {% trans %}
        ZChordz
        {% endtrans %}
      </h2>
      <img class="centered"
           src="{{ url('static/images/zchordz-mar-4-2020.png') }}"
           alt="ZChordz screenshot">
      <div class="centered">
        {% trans %}
        ZChordz maps the chords of a minor or major scale
        to white keys
        {% endtrans %}
      </div>
      <div>
        <b>Features</b>
        <ul>
          <li>Velocity multiplier per note</li>
        </ul>
      </div>
    </div>
    <div class="col-sm col-md-last">
      <h2 class="centered">
        {% trans %}
        Plugin
        {% endtrans %}
      </h2>
      <div class="video_caption">
        {% trans %}
        Coming soon
        {% endtrans %}
      </div>
    </div>
  </div>
</div>

{% endblock body_content %}
