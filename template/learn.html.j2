{% extends "common/base.j2" %}
{% block head_content %}
<title>Zrythm - {{ _('Learn') }}</title>
<meta name="description"
      content=
      "{% trans %}
      Zrythm reference pages - user manual - tutorials
      {% endtrans %}" />
<link rel="canonical" href="https://www.zrythm.org/{{ lang }}/learn.html">
{% endblock head_content %}

{% block body_content %}
<div class="container features_box">
  <h1 class="page_title">
    {% trans %}
    Learn
    {% endtrans %}
  </h1>

  <h2 class="page_subtitle">
    {% trans %}
    Tutorials
    {% endtrans %}
  </h2>
  <div class="row">
    <div class="col-sm-12 col-md-4">
      <video class="video" controls>
        <source src="https://www.zrythm.org/videos/zrythm_demo_2020_01_15.webm"
                type="video/webm">
        {% trans %}
        Your browser does not support HTML5 video
        {% endtrans %}
      </video>
      <div class="video_caption">
        {% trans %}
        Basic demo
        {% endtrans %}
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <video class="video" controls>
        <source src="https://www.zrythm.org/videos/zlfo_2020_04_03.mp4"
                type="video/mp4">
        {% trans %}
        Your browser does not support HTML5 video
        {% endtrans %}
      </video>
      <div class="video_caption">
        {% trans %}
        ZLFO demo
        {% endtrans %}
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <video class="video" controls
             {#poster="https://www.zrythm.org/videos/midi_tracks_2020_04_03.jpg"#}>
        <source src="https://www.zrythm.org/videos/midi_tracks_2020_04_03.mp4"
                type="video/mp4">
        {% trans %}
        Your browser does not support HTML5 video
        {% endtrans %}
      </video>
      <div class="video_caption">
        {% trans %}
        MIDI tracks
        {% endtrans %}
      </div>
    </div>
  </div>

  <h2 class="page_subtitle">
    {% trans %}
    Documentation
    {% endtrans %}
  </h2>
  <div class="button_group">
    <a class="button"
       href="https://manual.zrythm.org/{{ lang }}/index.html">
      {{ _('User Manual') }}</a>
    <a class="button"
       href="https://docs.zrythm.org/">
      {{ _('Developer Reference') }}</a>
  </div>

</div>

{% endblock body_content %}
