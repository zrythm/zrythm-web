{% extends "common/base.j2" %}
{% block head_content %}
<title>Zrythm - {{ _('Learn') }}</title>
<meta name="description"
      content=
      "{% trans %}
      Zrythm reference pages - user manual - tutorials
      {% endtrans %}" />
<link rel="canonical" href="https://www.zrythm.org/{{ lang }}/learn.html">
{% endblock head_content %}

{% block body_content %}
<div class="container features_box sponsors_box">
  <h1 class="page_title">
    {% trans %}
    Learn
    {% endtrans %}
  </h1>

  <h2 class="page_subtitle">
    {% trans %}
    Tutorials
    {% endtrans %}
  </h2>
  <h3 class="page_subtitle">
    {% trans %}
    General
    {% endtrans %}
  </h3>
  <div class="row">
    <div class="col-sm-12 col-md-4">
      <video class="video" controls>
        <source src="https://www.zrythm.org/videos/zlfo_2020_04_03.mp4"
                type="video/mp4">
        {% trans %}
        Your browser does not support HTML5 video
        {% endtrans %}
      </video>
      <div class="video_caption">
        ZLFO
        <br>
        <small>
          {% trans %}
          Video by
          {% endtrans %}
          <a href="https://mamot.fr/@tillparisot">Till Parisot</a>
        </small>
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <video class="video" controls
             {#poster="https://www.zrythm.org/videos/midi_tracks_2020_04_03.jpg"#}>
