          <a href="https://manual.zrythm.org/{{ lang }}/Zrythm.epub">
            {% trans %}
            download ePUB
            {% endtrans %}
            ({{ lang }})
          </a>
        </td>
      </tr>
    </tbody>
  </table>

  <h3>
    {% trans %}
    Developer docs
    {% endtrans %}
  </h3>
  <table>
    <tbody>
      <tr>
        <td class="first_col">
          {% trans %}
          online docs
          {% endtrans %}
        </td>
        <td>
          <a href="https://docs.zrythm.org/">
            {% trans %}
            browse docs
            {% endtrans %}
          </a>
        </td>
      </tr>
    </tbody>
  </table>

</div>
</left>

{% endblock body_content %}
