{% extends "common/base.j2" %}
{% block head_content %}
<title>Zrythm - {{ _('Download') }}</title>
<meta name="description"
      content=
      "{% trans %}
      Download Zrythm's source code or purchase a binary
      package installer
      {% endtrans %}" />
<link rel="canonical" href="https://www.zrythm.org/{{ lang }}/download.html">
{% endblock head_content %}

{% block body_content %}
<left>
<div class="container features_box">
  <h1 class="page_title">
    {% trans %}
    Download
    {% endtrans %}
  </h1>

  <h2>
    {% trans %}
    Source code
    {% endtrans %}
  </h2>
  <table>
    <tbody>
      <tr>
        <td class="first_col">
          {% trans %}
          git repositories
          {% endtrans %}
        </td>
        <td class="second_col">
          <a href="{{ git_base_url }}">
            cgit
          </a>
        </td>
      </tr>
      <tr>
        <td class="first_col">
          {% trans %}
          stable releases
          {% endtrans %}
        </td>
        <td>
          <a href="{{ releases_url }}">
            {% trans %}
            releases
            {% endtrans %}
          </a>
        </td>
      </tr>
      <tr>
        <td class="first_col">
          {% trans %}
          GPG signing key
          {% endtrans %}
        </td>
        <td>
          <a href="{{ url('static/gpg_key.txt') }}">
            4813 2384 AD3D F7D8 6E25  4B83 022E AE42 313D 70F3
          </a>
        </td>
      </tr>
    </tbody>
  </table>

  <h2>
    {% trans %}
    Trial version
    {% endtrans %}
  </h2>
  <table>
    <tbody>
      <tr>
        <td class="first_col">
          {% trans %}
          GNU/Linux
          {% endtrans %}
        </td>
        <td class="second_col">
          <a href="{{ downloads_url }}zrythm-trial-{{ version }}-installer.zip">
            {% trans %}
            download zip
            {% endtrans %}</a>
          <small>
            <a href="{{ downloads_url }}zrythm-trial-{{ version }}-installer.zip.md5">
              (md5)</a>
            <a href="{{ downloads_url }}zrythm-trial-{{ version }}-installer.zip.asc">
              (sig)
            </a>
          </small>
        </td>
      </tr>
      <tr>
        <td class="first_col">
          {% trans %}
          Windows 64-bit
          {% endtrans %}
        </td>
        <td>
          <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.exe">
            {% trans %}
            download exe
            {% endtrans %}</a>
          <small>
            <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.exe.md5">
              (md5)</a>
            <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.exe.asc">
              (sig)
            </a>
          </small>
        </td>
      </tr>
      <tr>
        <td class="first_col">
          MacOS
        </td>
        <td>
          <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.dmg">
            {% trans %}
            download dmg
            {% endtrans %}</a>
          <small>
            <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.dmg.md5">
              (md5)</a>
            <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.dmg.asc">
              (sig)
            </a>
          </small>
        </td>
      </tr>
    </tbody>
  </table>

  <h2>
    {% trans %}
    Full version
    {% endtrans %}
  </h2>
  <div class="container centered">
    <div class="row centered">
      <div class="col-sm-4">
        <h3>
          {{ version }} <small style="display: inline;">({{ _('alpha') }})</small></h3>
      </div>
      <div class="col-sm-4">
        <h3>{{ _('alpha/beta') }}</h3>
      </div>
      <div class="col-sm-4">
        <h3>{{ _('subscription') }}</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <p>
          <p>{{ _('Latest version') }}</p>
          <p>{{ _('Bundled plugins') }}</p>
          <p>{{ _('<b>$5</b> one-time purchase') }}</p>
        </p>
      </div>
      <div class="col-sm-4">
        <p>
          <p>{{ _('Always latest alpha/beta version') }}</p>
          <p>{{ _('Bundled plugins') }}</p>
          <p>{{ _('Free upgrades for alpha/beta releases') }}</p>
          <p>{{ _('<s>$25</s> <b>$12.50</b> one-time purchase') }}</p>
        </p>
      </div>
      <div class="col-sm-4">
        <p>
          <p>{{ _('Always latest version') }}</p>
          <p>{{ _('Bundled plugins') }}</p>
          <p>{{ _('Free upgrades during subscription') }}</p>
          <p>{{ _('<b>$5</b> per month') }}</p>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <p>
          <center>
            <label class="button" for="modal-buy-single">{{ _('Buy Now') }}</label>
            <input type="checkbox" id="modal-buy-single" class="modal">
            <div>
              <div class="card">
                <label for="modal-buy-single" class="modal-close" ></label>
                <h3 class="section">{{ _('Select your OS') }}</h3>
                <p class="section">
                  <a href="https://transactions.sendowl.com/products/78213901/C9A9B174/view" rel="nofollow" class="button">GNU/Linux</a>
                  <a href="https://transactions.sendowl.com/products/78213902/50922779/view" rel="nofollow" class="button">{{ _('Windows 64-bit') }}</a>
                  <a href="https://transactions.sendowl.com/products/78217268/A38CD76D/view" rel="nofollow" class="button">MacOS</a>
                </p>
              </div>
            </div>
          </center>
        </p>
      </div>
      <div class="col-sm-4">
        <p>
          <center>
            <label class="button secondary" for="modal-buy-alpha">{{ _('Buy Now') }}</label>
            <input type="checkbox" id="modal-buy-alpha" class="modal">
            <div>
              <div class="card">
                <label for="modal-buy-alpha" class="modal-close" ></label>
                <h3 class="section">{{ _('Select your OS') }}</h3>
                <p class="section">
                  <a href="https://transactions.sendowl.com/products/78169986/2B0FE183/view" rel="nofollow" class="button secondary">GNU/Linux</a>
                  <a href="https://transactions.sendowl.com/products/78186269/B7856C8B/view" rel="nofollow" class="button secondary">{{ _('Windows 64-bit') }}</a>
                  <a href="https://transactions.sendowl.com/products/78217260/11CE10F2/view" rel="nofollow" class="button secondary">MacOS</a>
                </p>
              </div>
            </div>
          </center>
        </p>
      </div>
      <div class="col-sm-4">
        <p>
          <center>
            <form action="https://www.paypal.com/cgi-bin/webscr"
                  class="no_css_form" method="post" target="_top">
              <input type="hidden" name="cmd" value="_s-xclick">
              <input type="hidden" name="hosted_button_id" value="QPVLCKJYGNT8A">
              <input type="submit" class="button primary" value="{{ _('Subscribe') }}"
                     name="submit">
            </form>
          </center>
        </p>
      </div>
    </div>
  </div>
  <div class="centered"><small>
    {% trans %}
    This month we received ${{ monthly_earning_str }}. Our goal is $3,000.
    {% endtrans %}
    <progress value="{{ monthly_earning }}" max="3000" class="inline primary income_progress"></progress>
  </small></div>
</div>
</left>
<script type="text/javascript" src="https://transactions.sendowl.com/assets/sendowl.js" ></script>

{% endblock body_content %}
