                <p class="section">
                  <a href="{{ downloads_url }}zrythm-trial-{{ version }}-installer.zip" rel="nofollow" class="button">{{ _('GNU/Linux') }}</a>
                  <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.exe" rel="nofollow" class="button">{{ _('Windows 64-bit') }}</a>
                  <a href="{{ downloads_url }}zrythm-trial-{{ version }}-setup.dmg" rel="nofollow" class="button">MacOS</a>
