{% extends "common/base.j2" %}
{% block head_content %}
<title>Zrythm - {{ _('Features') }}</title>
<meta name="description"
      content=
      "{% trans %}
      List of features.
      {% endtrans %}" />
<link rel="canonical" href="https://www.zrythm.org/{{ lang }}/features.html">
{% endblock head_content %}

{% block body_content %}
<section class="hero">
    <section class="hero__container container">
        <h2 class="hero__title">{{ _('Features') }}</h2>
    </section>

</section>

<section class="highlights" id="highlights">
    <div class="highlights__row">
        <div class="highlights__content">
            <h3 class="highlights__header">{{ _('Piano Roll') }}</h3>
            <p class="highlights__text">
              {% trans %}
              Create, edit and arrange MIDI events in a dedicated piano roll.
              {% endtrans %}
            </p>
        </div>
        <div class="highlights__screenshot"><img class="highlights__image" src="{{ url('static/images/piano-roll.gif') }}"></div>
    </div>
    <div class="highlights__row highlights__row--alt">
        <div class="highlights__content">
            <h3 class="highlights__header">{{ _('Anywhere-to-Anywhere Connections') }}</h3>
            <p class="highlights__text">
              {% trans %}
              Connect anything to anything.
              {% endtrans %}
            </p>
        </div>
        <div class="highlights__screenshot"><img class="highlights__image" src="{{ url('static/images/anywhere-to-anywhere-connections.gif') }}"></div>
    </div>

    <div class="highlights__row">
        <div class="highlights__content">
            <h3 class="highlights__header">{{ _('Bounce in Place') }}</h3>
            <p class="highlights__text">
              {% trans %}
              Quickly bounce selected material to audio.
              {% endtrans %}
            </p>
        </div>
        <div class="highlights__screenshot"><img class="highlights__image" src="{{ url('static/images/bounce-in-place.gif') }}"></div>
    </div>

    <div class="highlights__row highlights__row--alt">
        <div class="highlights__content">
            <h3 class="highlights__header">{{ _('Automation Curves') }}</h3>
            <p class="highlights__text">
              {% trans %}
              Automate parameters with straight lines or curves.
              {% endtrans %}
            </p>
        </div>
        <div class="highlights__screenshot"><img class="highlights__image" src="{{ url('static/images/automation-curves.gif') }}"></div>
    </div>

</section>

{% endblock body_content %}
