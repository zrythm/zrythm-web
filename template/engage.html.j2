{% extends "common/base.j2" %}
{% block body_content %}
<article class="d-flex flex-column p-2 bd-highlight">
  <div class="container">
    <div class="text-center">
      <header>
        <h1>{{ _("Talk With Us") }}</h1>
      </header>
      <h6 class="description">
        {% trans %}
          Use the mailing lists and join our chatrooms
          to keep up with development, find technical help, and
          discuss Zrythm.
        {% endtrans %}
      </h6>
    </div>
    <div class="container">
      <p>
        <i class="fa fa-envelope"></i>
        <a href="https://lists.zrythm.org/postorius/lists/announce.lists.zrythm.org/">{{ _("Announcements Mailing List") }}</a>
      </p>
      <p>
        <i class="fa fa-envelope"></i>
        <a href="https://lists.zrythm.org/postorius/lists/user.lists.zrythm.org/">{{ _("General Help Mailing List") }}</a>
      </p>
      <p>
        <i class="fa fa-envelope"></i>
        <a href="https://lists.zrythm.org/postorius/lists/dev.lists.zrythm.org/">{{ _("Development Mailing List") }}</a>
      </p>
      <p>
        <i class="fa fa-comments"></i>
        {% trans %}
          Available on <a href="ircs://chat.freenode.net:6697/#zrythm">irc.freenode.net</a>
          in the channel <code>#zrythm</code>.
        {% endtrans %}
      </p>
      <p>
        <i class="fa fa-matrix-org"></i>
        {% trans %}
          Available on <a href="https://riot.im/app/#/room/#zrythmdaw:matrix.org">Matrix</a>
          in the channel <code>#zrythmdaw:matrix.org</code>.
        {% endtrans %}
      </p>
    </div> <!-- container -->
  </div>
</article>
{% endblock body_content %}
